@model soprosopro.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genres)
            </dt>
            <dd class="col-sm-10">
                @foreach (var genre in Model.Genres)
                {
                    <a asp-controller="Genres" asp-action="Details" asp-route-id="@genre.GenreId">
                        @genre.Genres.Type </a> <br />
                }
                </dd>
                     <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actors)
            </dt>
            <dd class="col-sm-10">
                @foreach (var genre in Model.Actors)
                {
                    <a asp-controller="Actors" asp-action="Details" asp-route-id="@genre.ActorId">
                        @genre.Actor.Name </a> <br />
                }
                </dd>
                     <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Directors)
            </dt>
            <dd class="col-sm-10">
                @foreach (var genre in Model.Directors)
                {
                    <a asp-controller="Directors" asp-action="Details" asp-route-id="@genre.DirectorId">
                        @genre.Director.Name </a> <br />
                }
                </dd>
                            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producers)
            </dt>
            <dd class="col-sm-10">
                @foreach (var genre in Model.Producers)
                {
                    <a asp-controller="Producers" asp-action="Details" asp-route-id="@genre.ProducerId">
                        @genre.Producer.Name </a> <br />
                }
                </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MovieId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
